{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "DevInBank | Conta-365",
    "description": "Bem vindo, aqui você encontra todos os endpoints da API Conta365."
  },
  "host": "conta365.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "User",
      "description": "Neste endpoint você tem acesso as informações de usuarios."
    },
    {
      "name": "Transaction",
      "description": "Neste endpoint você tem acesso as informações das transações de usuarios."
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/v1/users": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint que lista todos os usuários cadastrados.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/users/{userID}": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint que mostra os dados de um usuário cadastrado.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "patch": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para atualizar um usuario já cadastrado.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Dados necessarios para atualizar um usuário. Você pode enviar apenas um ou mais campos. Campos diferentes de name e email serão ignorados. assim como campos sem valor.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/users/singup": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para registrar um novo usuario.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Dados necessarios para cadastrar um usuário.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/transactions/{userID}": {
      "get": {
        "tags": [
          "Transaction"
        ],
        "description": "Endpoint para buscar as transações de um usuário.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "post": {
        "tags": [
          "Transaction"
        ],
        "description": "Endpoint para adicionar uma transação a um usuário.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Dados necessarios para cadastrar um transação.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddTransaction"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/finance/{userID}": {
      "get": {
        "tags": [
          "Transaction"
        ],
        "description": "Endpoint para buscar as transações de um usuário exibindo seus totais por ano/mês.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/transactions/{userID}/{financialID}": {
      "delete": {
        "tags": [
          "Transaction"
        ],
        "description": "Endpoint para deletar uma transação de um usuário.",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "financialID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/transactions/import/{userID}": {
      "post": {
        "tags": [
          "Transaction"
        ],
        "description": "Endpoint para importar transações de uma arquivo XLSX e lançar para um usuário.  \n   \n <h1>Modelo do Arquivo XLSX</h1>  \n <span>OBS: Os nomes das colunas e ordem deve ser a mesma em seu arquivo.</span>  <table id=\"modelo-xlsx\" width=\"300\">  <thead>  <tr>  <th>price</th>  <th>typeOfExpenses</th>  <th>date</th>  <th>name</th>  </tr>  </thead>  <tbody>  <tr>  <td>100</td>  <td>Mercado</td>  <td>01/01/2022</td>  <td>Compras do mês</td>  </tr>  </tbody>  </table>",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "Anexe uma planilha XLSX com os dados para importar"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "Jhon Doe"
        },
        "email": {
          "type": "string",
          "example": "e-mail@email.com.br"
        }
      }
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "userId": {
          "type": "number",
          "example": 2
        },
        "financialData": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": 1
              },
              "price": {
                "type": "number",
                "example": 21.9
              },
              "typesOfExpenses": {
                "type": "string",
                "example": "Gasolina"
              },
              "date": {
                "type": "string",
                "example": "01/01/2022"
              },
              "name": {
                "type": "string",
                "example": "Descriçõ do gasto com a gasolina"
              }
            }
          }
        }
      }
    },
    "AddUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Jhon Doe"
        },
        "email": {
          "type": "string",
          "example": "jhondoe@doe.com.br"
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "AddTransaction": {
      "type": "object",
      "properties": {
        "price": {
          "type": "number",
          "example": 21.9
        },
        "typeOfExpenses": {
          "type": "string",
          "example": "Gasolina"
        },
        "date": {
          "type": "string",
          "example": "01/01/2022"
        },
        "name": {
          "type": "string",
          "example": "Descrição do gasto com a gasolina"
        }
      },
      "required": [
        "price",
        "typeOfExpenses",
        "date",
        "name"
      ]
    }
  }
}